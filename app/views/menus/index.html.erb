<div>
  <div>
    <h1>
      List of all menus
    </h1>
  </div>
</div>

<hr>



<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Event Name
        </th>
        
        <th>
          Event Date
        </th>

        <th>
          Roast beef pans
        </th>

        <th>
          Chicken pans
        </th>

        <th>
          Salad pans
        </th>

        <th>
          Vegetable pans
        </th>

        <th>
          Rice pans
        </th>

        <th>
          Sweet potato pans
        </th>

        <th>
          Dessert pans
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>



      <% @list_of_menus.each do |a_menu| %>

      <% matching_events = Event.where({ :id => a_menu.event_id}) %>
      <% event = matching_events.first %>
    
      <tr>
        <td>

          <%= event.event_name %>
        </td>

         <td>
          <%= event.event_date.strftime("%m/%d/%Y") %>
        </td>

        <td>
          <%= a_menu.roast_beef_pans %>
        </td>

        <td>
          <%= a_menu.chicken_pans %>
        </td>

        <td>
          <%= a_menu.salad_pans %>
        </td>

        <td>
          <%= a_menu.vegetable_pans %>
        </td>

        <td>
          <%= a_menu.rice_pans %>
        </td>

        <td>
          <%= a_menu.sweet_potato_pans %>
        </td>

        <td>
          <%= a_menu.dessert_pans %>
        </td>

        <td>
          <%= time_ago_in_words(a_menu.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_menu.updated_at) %> ago
        </td>

        <td>
          <a href="/menus/<%= a_menu.id %>">
            Show details
          </a>
        </td>
      </tr>

      <% end %>
    </table>
  </div>
</div>

<hr>
